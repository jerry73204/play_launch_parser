<launch>
  <!-- Robot description launch file -->
  <arg name="robot_name" default="default_robot" />
  <arg name="use_sim_time" default="false" />

  <!-- Let variables for paths -->
  <let name="urdf_path" value="$(find-pkg-share robot_description)/urdf/robot.urdf" />
  <let name="config_path" value="$(find-pkg-share robot_description)/config" />

  <!-- Robot state publisher -->
  <node pkg="robot_state_publisher" exec="robot_state_publisher" name="robot_state_publisher" namespace="/$(var robot_name)">
    <param name="robot_description" value="$(var urdf_path)" />
    <param name="use_sim_time" value="$(var use_sim_time)" />
  </node>

  <!-- Joint state publisher (simulation only) -->
  <node pkg="joint_state_publisher" exec="joint_state_publisher" name="joint_state_publisher" namespace="/$(var robot_name)" if="$(var use_sim_time)">
    <param name="use_sim_time" value="$(var use_sim_time)" />
  </node>
</launch>
